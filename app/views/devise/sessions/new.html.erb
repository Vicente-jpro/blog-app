<h2 class="text-center">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="form-signin">
  
  <div class="form-group  my-1">
    <%= f.email_field :email, autofocus: true, placeholder:"Your email username@exemple.com", class:"form-control", autocomplete: "email" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "current-password", class:"form-control", placeholder:"Password"  %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group  my-1">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="d-grid gap-2 my-1">
    <%= f.submit "Log in", class: "btn btn-info" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
